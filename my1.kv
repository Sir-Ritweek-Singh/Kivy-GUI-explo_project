WindowManager:
    MainWindow:
    Amplitude:
    Resistor:
    FM:
    Diode:


<MainWindow>:
    name: "main"

    GridLayout:
        cols:1



        GridLayout:
            cols: 2
            Image:
                source: 'title.jpeg'
            Image:
                source: 'logo.png'
            Label:
                text: "Solid State Devices"
                font_size:'30sp'
            Label:
                text: "Wave Modulation"
                font_size:'30sp'
            Button:
                text: "Resistor"
                font_size:'30sp'
                on_release:
                    app.root.current = "Resistor"
                    root.manager.transition.direction = "left"
            Button:
                text: "Amplitude"
                font_size:'30sp'
                on_release:
                    app.root.current = "Amplitude"
                    root.manager.transition.direction = "left"
            Button:
                text: "Diode"
                font_size:'30sp'
                on_release:
                    app.root.current = "Diode"
                    root.manager.transition.direction = "left"
            Button:
                text: "FM"
                font_size:'30sp'
                on_release:
                    app.root.current = "FM"
                    root.manager.transition.direction = "left"



<Resistor>:
    name: "Resistor"
    len: len
    area: area
    res: res

    GridLayout:
        cols: 2
        Label:
            text: "Length in m: "

        TextInput:
            id: len
            multiline: False
        Label:
            text: "Crossectional area in mm^2: "

        TextInput:
            id: area
            multiline: False
        Label:
            text: "resistivity: in Ohm/m (in 10^-6) "

        TextInput:
            id: res
            multiline: False
        Button:
            text: "Plot I-V graph"
            on_release: root.btn()

        Button:
            text: "Go Back"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"


<Amplitude>:
    name: "Amplitude"
    caramp: caramp
    carfr: carfr
    mesamp: mesamp
    mesfr: mesfr
    mod: mod
    GridLayout:
        cols: 2
        Label:
            text: "carrier amplitude: "

        TextInput:
            id: caramp
            multiline: False
        Label:
            text: "carrier frequency: "

        TextInput:
            id: carfr
            multiline: False
        Label:
            text: "message amplitude: "

        TextInput:
            id: mesamp
            multiline: False
        Label:
            text: "message frequency: "

        TextInput:
            id: mesfr
            multiline: False
        Label:
            text: "modulation index: "

        TextInput:
            id: mod
            multiline: False
        Button:
            text: "Plot Characteristics"
            on_release: root.btn()

        Button:
            text: "Go Back"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"
<FM>:
    name: "FM"
    mesf: mesf
    carf: carf
    mod: mod

    GridLayout:
        cols: 2
        Label:
            text: "Message Frequency "

        TextInput:
            id: mesf
            multiline: False
        Label:
            text: "Carrier Frequency "

        TextInput:
            id: carf
            multiline: False
        Label:
            text: "Modulation Index"

        TextInput:
            id: mod
            multiline: False
        Button:
            text: "Plot Characteristics"
            on_release: root.btn()

        Button:
            text: "Go Back"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"

<Diode>:
    name: "Diode"
    revi: revi
    emsc: emsc
    temp: temp

    GridLayout:
        cols: 2
        Label:
            text: "Saturation Current in Pico-Amp"

        TextInput:
            id: revi
            multiline: False

        Label:
            text: "emission Coefficient "

        TextInput:
            id: emsc
            multiline: False
        Label:
            text: "Junction Temprature in K"

        TextInput:
            id: temp
            multiline: False
        Label:
            text: "Boltzmann constant  1.38064852 Ã— 10^-23 J/k"


        Label:
            text: "Charge of Electron taken to be -1.602 x 10^-19 C"


        Button:
            text: "Plot Characteristics"
            on_release: root.btn()

        Button:
            text: "Go Back"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"